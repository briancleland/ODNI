{
  "width": 200,
  "height": 200,
  "padding": {"top": 30,"left": 30,"bottom": 20,"right": 300},
  "data": [
    {
      "name": "table",
      "url": "csv/suggestions.csv",
      "format": {
        "type": "csv",
        "parse": {"Date_submitted": "date"}
      }
    },
    {
      "name": "counts",
      "source": "table",
      "transform": [
        {"type": "facet", "groupby": ["Status_reason"], "summarize": {"Title": "count"}},
        {"type": "pie", "field": "count_Title"}
      ]
    }
  ],
  "scales": [
    {
      "name": "c",
      "type": "ordinal",
      "domain": {"data": "counts", "field": "Status_reason"},
      "range": "category10"
    }
  ],
  "legends": [
    {"fill": "c", "offset": 40}
  ],
  "marks": [    
    {
      "type": "arc",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"field": {"group": "width"}, "mult": 0.5},
          "y": {"field": {"group": "height"}, "mult": 0.5},
          "startAngle": {"field": "layout_start"},
          "endAngle": {"field": "layout_end"},
          "innerRadius": {"value": 50},
          "outerRadius": {"value": 100},
          "stroke": {"value": "#fff"}
        },
        "update": {
          "fill": {"scale": "c", "field": "Status_reason"}
        },
        "hover": {
          "fill": {"value": "pink"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"field": {"group": "width"}, "mult": 0.5},
          "y": {"field": {"group": "height"}, "mult": 0.5},
          "radius": {"value": 75},
          "theta": {"field": "layout_mid"},
          "fill": {"value": "#fff"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "text": {"field": "count_Title"},
          "fontSize": {"value": 12}
        }
      }
    }
  ]
}